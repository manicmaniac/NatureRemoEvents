      function createChart(id, title, unit, data) {
        Highcharts.stockChart(id, {
          rangeSelector: {
            selected: 0,
            buttons: [
              {
                type: 'day',
                count: 1,
                text: '1d'
              },
              {
                type: 'day',
                count: 7,
                text: '1w'
              },
              {
                type: 'month',
                count: 1,
                text: '1m'
              },
              {
                type: 'month',
                count: 3,
                text: '3m'
              },
              {
                type: 'ytd',
                text: 'YTD'
              },
            ]
          },
          title: { text: title, },
          yAxis: {
            title: { text: title + ' (' + unit + ')' }
          },
          plotOptions: {
            series: {
              label: { enabled: false }
            }
          },
          series: [
            {
              name: title,
              data: data,
            }
          ]
        });
      }
